brew "k8sgpt"              # K8s AI Debug 工具
brew "helm"                # K8s 套件管理
brew "minikube"            # 本地 Kubernetes
brew "skaffold"            # CI/CD 自動化部署
brew "stern"               # 多 Pod log 即時查看
# brew "colima"            # 可選：本地容器執行環境

tap "hashicorp/tap"
tap 'homebrew/bundle'

# ============================================================
# 🗂️ File system / Network tools
# ============================================================
brew "tree"                # 檔案樹狀結構顯示
brew "rsync"               # 檔案同步
brew "rclone"              # 雲端同步 (Google Drive, S3, GCS...)

# ============================================================
# 🔍 Search / Diff / JSON tools
# ============================================================
brew "bat"                 # cat 增強版（語法高亮、行號）
brew "fzf"                 # 模糊搜尋
brew "jq"                  # JSON 處理
brew "yq"                  # YAML 處理
brew "autojump"            # 快速跳轉目錄
brew "ripgrep"             # 高效全文搜尋 (比 grep 快)
brew "ctags"               # 產生程式碼索引標籤

# ============================================================
# 🧠 Programming languages / Toolchains
# ============================================================
brew "oven-sh/bun/bun"    # bun 工具包管理
brew "fnm"                 # Node.js 版本管理
brew "go"                  # Golang
brew "pyenv"               # Python 版本管理
brew "pipx"                # 安裝/隔離 Python CLI 工具
brew "uv"                  # Python 套件管理（pip 替代方案）
# brew "asdf"
brew "mise"                # 統一管理 runtime（pyenv, fnm, go 等）

# ============================================================
# 💻 Terminal / Shell
# ============================================================
# brew "zellij"
brew "tmux"                # 多窗格終端
brew "tmux-mem-cpu-load"   # 顯示系統負載的 tmux 插件
brew "neovim"              # 現代化 Vim
brew "starship"            # 現代化 prompt
brew "thefuck"             # 自動修正上一個錯誤指令

# ============================================================
# 🧪 Testing / Benchmark
# ============================================================
